#include <stdio.h>

// structure to store student details
struct Student
{
    int rollNo;
    char name[50];
};

int main()
{
    struct Student s[100];
    int n, newRecords, i, total;

    // input existing records
    printf("Enter number of existing students: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++)
    {
        printf("\nEnter details of Student %d\n", i + 1);
        printf("Enter Roll Number: ");
        scanf("%d", &s[i].rollNo);

        printf("Enter Name: ");
        scanf(" %[^\n]", s[i].name);
    }

    // input new records to add
    printf("\nEnter number of new students to add: ");
    scanf("%d", &newRecords);

    total = n + newRecords;

    for (i = n; i < total; i++)
    {
        printf("\nEnter details of Student %d\n", i + 1);
        printf("Enter Roll Number: ");
        scanf("%d", &s[i].rollNo);

        printf("Enter Name: ");
        scanf(" %[^\n]", s[i].name);
    }

    // display updated list
    printf("\n--- Updated Student List ---\n");
    for (i = 0; i < total; i++)
    {
        printf("Student %d: Roll No = %d, Name = %s\n", i + 1, s[i].rollNo, s[i].name);
    }

    return 0;
}
