#include <stdio.h>

int main()
{
    int n, i;
    float sales[30], total = 0;

    // input number of days
    printf("Enter number of days: ");
    scanf("%d", &n);

    // input daily sales
    for (i = 0; i < n; i++)
    {
        printf("Enter sales for Day %d: ", i + 1);
        scanf("%f", &sales[i]);
        total += sales[i];
    }

    // display sales report
    printf("\n--- Sales Report ---\n");
    for (i = 0; i < n; i++)
    {
        printf("Day %d Sales: %.2f\n", i + 1, sales[i]);
    }

    printf("Total Sales: %.2f\n", total);

    return 0;
}
o/p:
Enter number of days: 2
Enter sales for Day 1: 1200
Enter sales for Day 2: 1300

--- Sales Report ---
Day 1 Sales: 1200.00
Day 2 Sales: 1300.00
Total Sales: 2500.00

