#include <stdio.h>

int main()
{
    float basicSalary, bonus, totalSalary;

    // Input basic salary and bonus
    printf("Enter basic salary: ");
    scanf("%f", &basicSalary);

    printf("Enter bonus amount: ");
    scanf("%f", &bonus);

    // Calculate total salary
    totalSalary = basicSalary + bonus;

    // Display result
    printf("Total Salary after bonus = %.2f\n", totalSalary);

    return 0;
}
o/p:
Enter basic salary: 25000
Enter bonus amount: 5000
Total Salary after bonus = 30000.00
