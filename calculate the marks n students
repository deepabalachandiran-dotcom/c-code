#include <stdio.h>

int main()
{
    int n, i;
    int m1, m2, m3, total;

    printf("Enter number of students: ");
    scanf("%d", &n);

    for(i = 1; i <= n; i++)
    {
        printf("\nEnter marks of student %d\n", i);

        printf("Subject 1: ");
        scanf("%d", &m1);

        printf("Subject 2: ");
        scanf("%d", &m2);

        printf("Subject 3: ");
        scanf("%d", &m3);

        total = m1 + m2 + m3;

        printf("Total marks of student %d = %d\n", i, total);
    }

    return 0;
}
o/p:
Enter number of students: 2

Enter marks of student 1
Subject 1: 70
Subject 2: 50
Subject 3: 40
Total marks of student 1 = 160

Enter marks of student 2
Subject 1: 70
Subject 2: 60
Subject 3: 55
Total marks of student 2 = 185
