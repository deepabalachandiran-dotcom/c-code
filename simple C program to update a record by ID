#include <stdio.h>
#include <string.h>

// structure to store student details
struct Student
{
    int rollNo;
    char name[50];
};

int main()
{
    struct Student s[100];
    int n, i, searchId, found = 0;

    // input number of students
    printf("Enter number of students: ");
    scanf("%d", &n);

    // input student details
    for (i = 0; i < n; i++)
    {
        printf("\nEnter details of Student %d\n", i + 1);
        printf("Enter Roll Number: ");
        scanf("%d", &s[i].rollNo);

        printf("Enter Name: ");
        scanf(" %[^\n]", s[i].name);
    }

    // search for a student to update
    printf("\nEnter Roll Number of student to update: ");
    scanf("%d", &searchId);

    for (i = 0; i < n; i++)
    {
        if (s[i].rollNo == searchId)
        {
            printf("\n--- Current Details ---\n");
            printf("Roll Number : %d\n", s[i].rollNo);
            printf("Name        : %s\n", s[i].name);

            // update details
            printf("\nEnter new Name: ");
            scanf(" %[^\n]", s[i].name);

            printf("\n--- Updated Record ---\n");
            printf("Roll Number : %d\n", s[i].rollNo);
            printf("Name        : %s\n", s[i].name);

            found = 1;
            break;
        }
    }

    if (!found)
    {
        printf("\nStudent with Roll Number %d not found.\n", searchId);
    }

    return 0;
}
