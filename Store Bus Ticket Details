#include <stdio.h>

// structure to store bus ticket details
struct BusTicket
{
    int ticketNumber;
    char passengerName[50];
    char source[30];
    char destination[30];
    float fare;
};

int main()
{
    struct BusTicket t;

    // input ticket details
    printf("Enter Ticket Number: ");
    scanf("%d", &t.ticketNumber);

    printf("Enter Passenger Name: ");
    scanf(" %[^\n]", t.passengerName);

    printf("Enter Source: ");
    scanf(" %[^\n]", t.source);

    printf("Enter Destination: ");
    scanf(" %[^\n]", t.destination);

    printf("Enter Ticket Fare: ");
    scanf("%f", &t.fare);

    // display ticket details
    printf("\n--- Bus Ticket Details ---\n");
    printf("Ticket Number : %d\n", t.ticketNumber);
    printf("Passenger     : %s\n", t.passengerName);
    printf("From          : %s\n", t.source);
    printf("To            : %s\n", t.destination);
    printf("Fare          : %.2f\n", t.fare);

    return 0;
}
o/p:
