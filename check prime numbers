#include <stdio.h>

// function to check prime
int isPrime(int num)
{
    int i;

    if (num <= 1)
        return 0;

    for (i = 2; i <= num / 2; i++)
    {
        if (num % i == 0)
            return 0;
    }
    return 1;
}

int main()
{
    int num;

    // input number
    printf("Enter a number: ");
    scanf("%d", &num);

    // function call
    if (isPrime(num))
        printf("%d is a Prime number\n", num);
    else
        printf("%d is not a Prime number\n", num);

    return 0;
}
o/p:
Enter a number: 3
3 is a Prime number
