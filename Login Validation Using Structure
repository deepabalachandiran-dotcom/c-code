#include <stdio.h>
#include <string.h>

// structure to store login details
struct Login
{
    char username[20];
    char password[20];
};

int main()
{
    struct Login stored, input;

    // store login credentials
    printf("Set Username: ");
    scanf("%s", stored.username);

    printf("Set Password: ");
    scanf("%s", stored.password);

    // get login input
    printf("\nEnter Username: ");
    scanf("%s", input.username);

    printf("Enter Password: ");
    scanf("%s", input.password);

    // verify credentials
    if (strcmp(stored.username, input.username) == 0 &&
        strcmp(stored.password, input.password) == 0)
    {
        printf("\nLogin Successful!\n");
    }
    else
    {
        printf("\nInvalid Username or Password!\n");
    }

    return 0;
}
