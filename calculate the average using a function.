#include <stdio.h>

// function to calculate average
float calculateAverage(int a, int b, int c)
{
    return (a + b + c) / 3.0;
}

int main()
{
    int num1, num2, num3;
    float avg;

    // input three numbers
    printf("Enter three numbers: ");
    scanf("%d %d %d", &num1, &num2, &num3);

    // function call
    avg = calculateAverage(num1, num2, num3);

    // display result
    printf("Average = %.2f\n", avg);

    return 0;
}
o/p:
Enter three numbers: 30 20 50
Average = 33.33
