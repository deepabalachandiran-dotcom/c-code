#include <stdio.h>

int main()
{
    int n, i;
    float price, total = 0, tax, finalAmount;

    printf("Enter number of items: ");
    scanf("%d", &n);

    for(i = 1; i <= n; i++)
    {
        printf("Enter price of item %d: ", i);
        scanf("%f", &price);
        total = total + price;
    }

    tax = total * 0.05;   // 5% tax
    finalAmount = total + tax;

    printf("\nTotal Amount: %.2f", total);
    printf("\nTax (5%%): %.2f", tax);
    printf("\nFinal Bill Amount: %.2f", finalAmount);

    return 0;
}
o/p
Enter number of items: 2
Enter price of item 1: 15
Enter price of item 2: 20

Total Amount: 35.00
Tax (5%): 1.75
Final Bill Amount: 36.75
