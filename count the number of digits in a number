#include <stdio.h>

int main()
{
    int num, count = 0;

    printf("Enter a number: ");
    scanf("%d", &num);

    // Handle zero case
    if(num == 0)
    {
        count = 1;
    }
    else
    {
        while(num != 0)
        {
            count++;
            num = num / 10;
        }
    }

    printf("Number of digits = %d\n", count);

    return 0;
}
o/p:
Enter a number: 34522
Number of digits = 5
