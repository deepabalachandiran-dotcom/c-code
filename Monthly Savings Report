#include <stdio.h>

int main()
{
    float income, expenses, savings;

    printf("Enter monthly income: ");
    scanf("%f", &income);

    printf("Enter total monthly expenses: ");
    scanf("%f", &expenses);

    savings = income - expenses;

    printf("\n---- Monthly Savings Report ----\n");
    printf("Monthly Income   : %.2f\n", income);
    printf("Monthly Expenses : %.2f\n", expenses);
    printf("Monthly Savings  : %.2f\n", savings);

    if(savings > 0)
        printf("Status: Good saving ğŸ‘\n");
    else if(savings == 0)
        printf("Status: No savings\n");
    else
        printf("Status: Expenses exceed income âš ï¸\n");

    return 0;
}
